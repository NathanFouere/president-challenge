{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "#services/*": ["./app/services/*.js"],
      "#controllers/*": ["./app/controllers/*.js"],
    }
  }
}
